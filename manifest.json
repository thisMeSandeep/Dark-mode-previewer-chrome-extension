{
    "manifest_version": 3,
    "name": "Dark Mode Previewer",
    "version": "1.0",
    "description": "Preview and apply dark mode themes to websites with predefined color options.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*",
      "file://*/*"
    ]
  }
  